<?xml version="1.0" encoding="UTF-8" ?>
<config>

<!-- These values map the submitter fields with their counterparts defined in solr schema. -->
	<schemaConfiguration>
		<!-- Url of the document, which is the uniqueKey in solr schema -->
		<URL>URL</URL>
		<Title>title</Title>
		<!-- The field which contains the content of the document (The body of the doc) -->
		<Content>file_content</Content>
		<!-- text/html or application/pdf ...etc -->
		<Type>type</Type>
		<!-- The field that stores the path to the ARC file which contains the cached version -->
		<Cache>path</Cache>
		<!-- Offset within the ARC file -->
		<Offset>recordOffset</Offset>
	</schemaConfiguration>
	
	<!-- You can add as many types as you want from the following supported types
	http://lucene.apache.org/tika/formats.html
	
	 -->
	<indexedDataTypes>
		<DataType>text/html</DataType>
		
		<DataType>application/pdf</DataType>
		<DataType>application/rtf</DataType>
		<DataType>application/msword</DataType>
		<DataType>application/vnd.ms-powerpoint</DataType>
		
	</indexedDataTypes>
	
	<databaseConfiguration>
		<provider>org.sqlite.JDBC</provider>
		<connectionString>jdbc:sqlite:submitter.db</connectionString>
	</databaseConfiguration>

</config>